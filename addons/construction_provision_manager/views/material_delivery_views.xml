<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Material Delivery Form View -->
    <record id="view_material_delivery_form" model="ir.ui.view">
        <field name="name">material.delivery.form</field>
        <field name="model">construction.material.delivery</field>
        <field name="arch" type="xml">
            <form string="Material Delivery">
                <header>
                    <button name="action_mark_delivered"
                            string="Mark as Delivered"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_consume_material"
                            string="Consume Material"
                            type="object"
                            class="btn-secondary"
                            invisible="state != 'delivered' or remaining_quantity &lt;= 0"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,delivered,consumed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Project &amp; Material">
                            <field name="project_id" required="1"/>
                            <field name="category_id" required="1"/>
                            <field name="material_name" required="1"/>
                        </group>
                        <group string="Quantity &amp; Pricing">
                            <field name="quantity" required="1"/>
                            <field name="unit" required="1"/>
                            <field name="unit_price" required="1"/>
                            <field name="total_cost" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Supplier Information">
                            <field name="supplier_name"/>
                            <field name="supplier_contact"/>
                            <field name="purchase_order_ref"/>
                        </group>
                        <group string="Delivery Details">
                            <field name="delivery_date" required="1"/>
                            <field name="received_by" required="1"/>
                        </group>
                    </group>

                    <group string="Usage Tracking" invisible="state == 'draft'">
                        <group>
                            <field name="consumed_quantity" readonly="1"/>
                            <field name="remaining_quantity" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes">
                            <field name="delivery_notes" placeholder="Additional delivery notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Material Delivery Tree View -->
    <record id="view_material_delivery_tree" model="ir.ui.view">
        <field name="name">material.delivery.tree</field>
        <field name="model">construction.material.delivery</field>
        <field name="arch" type="xml">
            <tree string="Material Deliveries" decoration-success="state == 'delivered'" decoration-muted="state == 'consumed'">
                <field name="delivery_date"/>
                <field name="project_id"/>
                <field name="material_name"/>
                <field name="category_id"/>
                <field name="quantity"/>
                <field name="unit"/>
                <field name="total_cost" sum="Total Cost"/>
                <field name="supplier_name"/>
                <field name="state" widget="badge" decoration-success="state == 'delivered'" decoration-info="state == 'draft'"/>
                <field name="remaining_quantity"/>
            </tree>
        </field>
    </record>

    <!-- Quick Add Material Delivery Form -->
    <record id="view_material_delivery_quick_form" model="ir.ui.view">
        <field name="name">material.delivery.quick.form</field>
        <field name="model">construction.material.delivery</field>
        <field name="arch" type="xml">
            <form string="Quick Add Material">
                <sheet>
                    <div class="oe_title">
                        <h2>Add Material to Project</h2>
                    </div>

                    <group>
                        <field name="project_id" required="1" options="{'no_create': True}"/>
                        <field name="category_id" required="1"/>
                        <field name="material_name" required="1" placeholder="Enter material name..."/>
                    </group>

                    <group>
                        <group>
                            <field name="quantity" required="1"/>
                            <field name="unit" required="1"/>
                        </group>
                        <group>
                            <field name="unit_price" required="1"/>
                            <field name="total_cost" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <field name="supplier_name" placeholder="Supplier name (optional)"/>
                        <field name="delivery_date" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_mark_delivered" string="Add &amp; Mark Delivered" type="object" class="btn-primary"/>
                    <button string="Add as Draft" type="object" name="create" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Material Delivery Kanban View -->
    <record id="view_material_delivery_kanban" model="ir.ui.view">
        <field name="name">material.delivery.kanban</field>
        <field name="model">construction.material.delivery</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="material_name"/>
                <field name="project_id"/>
                <field name="quantity"/>
                <field name="unit"/>
                <field name="total_cost"/>
                <field name="state"/>
                <field name="delivery_date"/>
                <field name="supplier_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb8">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <t t-esc="record.material_name.value"/>
                                    </strong>
                                    <br/>
                                    <small class="text-muted">
                                        <t t-esc="record.project_id.value"/>
                                    </small>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <span class="badge" t-att-class="record.state.raw_value === 'delivered' ? 'badge-success' : record.state.raw_value === 'draft' ? 'badge-info' : 'badge-secondary'">
                                        <t t-esc="record.state.value"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <strong><t t-esc="record.quantity.value"/> <t t-esc="record.unit.value"/></strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <strong>$<t t-esc="record.total_cost.value"/></strong>
                                    </div>
                                </div>
                                <div class="text-muted">
                                    <i class="fa fa-calendar"/> <t t-esc="record.delivery_date.value"/>
                                </div>
                                <div class="text-muted" t-if="record.supplier_name.value">
                                    <i class="fa fa-truck"/> <t t-esc="record.supplier_name.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_material_delivery_search" model="ir.ui.view">
        <field name="name">material.delivery.search</field>
        <field name="model">construction.material.delivery</field>
        <field name="arch" type="xml">
            <search string="Search Material Deliveries">
                <field name="material_name" string="Material" filter_domain="[('material_name', 'ilike', self)]"/>
                <field name="project_id" string="Project"/>
                <field name="supplier_name" string="Supplier"/>
                <field name="category_id" string="Category"/>

                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Delivered" name="filter_delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="Has Stock" name="filter_stock" domain="[('remaining_quantity', '>', 0)]"/>

                <separator/>
                <filter string="Today" name="filter_today" domain="[('delivery_date', '>=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')), ('delivery_date', '&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="This Week" name="filter_week" domain="[('delivery_date', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Delivery Date" name="group_date" context="{'group_by': 'delivery_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_material_delivery" model="ir.actions.act_window">
        <field name="name">Material Deliveries</field>
        <field name="res_model">construction.material.delivery</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_filter_delivered': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first material delivery!
            </p>
            <p>
                Track materials delivered to your construction projects.
                Monitor quantities, costs, and usage.
            </p>
        </field>
    </record>

    <record id="action_material_delivery_quick_add" model="ir.actions.act_window">
        <field name="name">Quick Add Material</field>
        <field name="res_model">construction.material.delivery</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_material_delivery_quick_form"/>
        <field name="target">new</field>
    </record>
</odoo>