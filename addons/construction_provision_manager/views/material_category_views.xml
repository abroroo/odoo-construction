<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Material Category Tree View -->
    <record id="view_material_category_tree" model="ir.ui.view">
        <field name="name">material.category.tree</field>
        <field name="model">construction.material.category</field>
        <field name="arch" type="xml">
            <tree string="Material Categories" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" required="1"/>
                <field name="code" required="1"/>
                <field name="color" widget="color_picker"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Material Category Form View -->
    <record id="view_material_category_form" model="ir.ui.view">
        <field name="name">material.category.form</field>
        <field name="model">construction.material.category</field>
        <field name="arch" type="xml">
            <form string="Material Category">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Category name..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="code" required="1"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>

                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Describe this category..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_material_categories" model="ir.actions.act_window">
        <field name="name">Material Categories</field>
        <field name="res_model">construction.material.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first material category!
            </p>
            <p>
                Organize your materials into categories like Construction Materials,
                Tools, Equipment, Safety, etc.
            </p>
        </field>
    </record>
</odoo>