<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mobile Dashboard Tree View -->
    <record id="view_mobile_dashboard_tree" model="ir.ui.view">
        <field name="name">construction.mobile.dashboard.tree</field>
        <field name="model">construction.mobile.dashboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- Mobile Dashboard Form View -->
    <record id="view_mobile_dashboard_form" model="ir.ui.view">
        <field name="name">construction.mobile.dashboard.form</field>
        <field name="model">construction.mobile.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="user_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Mobile Dashboard Kanban View -->
    <record id="view_mobile_dashboard_kanban" model="ir.ui.view">
        <field name="name">construction.mobile.dashboard.kanban</field>
        <field name="model">construction.mobile.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile o_construction_mobile_dashboard">
                <field name="id"/>
                <field name="name"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_mobile_dashboard_card">
                            <div class="o_kanban_image">
                                <i class="fa fa-dashboard fa-2x"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_body">
                                    <field name="user_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Mobile Dashboard Action -->
    <record id="action_mobile_dashboard" model="ir.actions.act_window">
        <field name="name">Mobile Dashboard</field>
        <field name="res_model">construction.mobile.dashboard</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_mobile_dashboard_kanban"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Welcome to your Mobile Dashboard!
            </p>
            <p>
                Access your tasks, expenses, and project information optimized for mobile devices.
            </p>
        </field>
    </record>

    <!-- Mobile Task Manager Views -->
    <record id="view_mobile_task_manager_tree" model="ir.ui.view">
        <field name="name">construction.mobile.task.manager.tree</field>
        <field name="model">construction.mobile.task.manager</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <record id="view_mobile_task_manager_form" model="ir.ui.view">
        <field name="name">construction.mobile.task.manager.form</field>
        <field name="model">construction.mobile.task.manager</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>My Tasks</h1>
                    </div>
                    <group>
                        <field name="user_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Mobile Task Manager Action -->
    <record id="action_mobile_task_manager" model="ir.actions.act_window">
        <field name="name">My Tasks</field>
        <field name="res_model">construction.mobile.task.manager</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks assigned yet!
            </p>
            <p>
                Your assigned tasks will appear here for easy mobile access.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_mobile_construction_root"
              name="Mobile Construction"
              sequence="10"
              web_icon="construction_mobile_manager,static/description/icon.png"/>

    <menuitem id="menu_mobile_dashboard"
              name="Dashboard"
              parent="menu_mobile_construction_root"
              action="action_mobile_dashboard"
              sequence="10"/>

    <menuitem id="menu_mobile_tasks"
              name="My Tasks"
              parent="menu_mobile_construction_root"
              action="action_mobile_task_manager"
              sequence="20"/>
</odoo>