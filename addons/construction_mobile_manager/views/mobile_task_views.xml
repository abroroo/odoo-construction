<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mobile Task Manager Kanban View -->
    <record id="view_mobile_task_manager_kanban" model="ir.ui.view">
        <field name="name">construction.mobile.task.manager.kanban</field>
        <field name="model">construction.mobile.task.manager</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile o_mobile_task_kanban" js_class="mobile_task_kanban">
                <field name="id"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_mobile_task_manager_card">
                            <div class="o_kanban_image">
                                <i class="fa fa-tasks fa-2x"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">My Tasks</strong>
                                <div class="o_kanban_record_body">
                                    <div class="o_mobile_task_filters">
                                        <button class="btn btn-primary btn-sm o_mobile_filter_btn" data-filter="all">All Tasks</button>
                                        <button class="btn btn-secondary btn-sm o_mobile_filter_btn" data-filter="todo">To Do</button>
                                        <button class="btn btn-warning btn-sm o_mobile_filter_btn" data-filter="progress">In Progress</button>
                                        <button class="btn btn-success btn-sm o_mobile_filter_btn" data-filter="done">Done</button>
                                    </div>
                                    <div class="o_mobile_task_list" id="mobile_task_list">
                                        <!-- Tasks will be loaded here via JavaScript -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Project Task Enhanced Views for Mobile -->
    <record id="view_project_task_mobile_kanban" model="ir.ui.view">
        <field name="name">project.task.mobile.kanban</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile o_project_task_mobile_kanban" default_group_by="stage_id">
                <field name="id"/>
                <field name="name"/>
                <field name="stage_id"/>
                <field name="priority"/>
                <field name="date_deadline"/>
                <field name="project_id"/>
                <field name="user_ids"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_mobile_task_card" t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="project_id"/>
                                    </div>
                                </div>
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" role="button">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a type="edit" class="dropdown-item">Edit Task</a>
                                        <a name="action_view_task_details" type="object" class="dropdown-item">View Details</a>
                                        <div class="dropdown-divider"/>
                                        <a class="dropdown-item o_mobile_status_change" data-status="todo">Mark as To Do</a>
                                        <a class="dropdown-item o_mobile_status_change" data-status="progress">Mark In Progress</a>
                                        <a class="dropdown-item o_mobile_status_change" data-status="done">Mark as Done</a>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_mobile_task_details">
                                    <div t-if="record.priority.raw_value != '0'" class="o_priority">
                                        <t t-if="record.priority.raw_value == '1'">
                                            <i class="fa fa-star text-warning" title="High Priority"/>
                                        </t>
                                    </div>
                                    <div t-if="record.date_deadline.raw_value" class="o_deadline">
                                        <i class="fa fa-calendar"/> <field name="date_deadline"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="user_ids" widget="many2many_avatar_user"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <div class="o_mobile_quick_actions">
                                        <button class="btn btn-sm btn-outline-primary o_mobile_status_btn"
                                                data-task-id=""
                                                data-current-stage="">
                                            <i class="fa fa-forward"/> Next Stage
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Mobile Task Detail Form -->
    <record id="view_project_task_mobile_form" model="ir.ui.view">
        <field name="name">project.task.mobile.form</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="mobile_update_stage"
                            type="object"
                            string="Update Status"
                            class="btn-primary"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet class="o_mobile_task_form">
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2>
                            <field name="project_id" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Task Information">
                            <field name="priority" widget="priority"/>
                            <field name="date_deadline"/>
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Progress">
                            <field name="stage_id" readonly="1"/>
                            <field name="parent_id" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Task description..."/>
                        </page>
                        <page string="Budget Information" invisible="1">
                            <!-- Budget info will be added via computed fields -->
                            <div class="o_mobile_budget_info">
                                <p>Budget information will be displayed here when available.</p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Mobile Task Actions -->
    <record id="action_mobile_tasks_kanban" model="ir.actions.act_window">
        <field name="name">My Tasks (Mobile)</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="view_project_task_mobile_kanban"/>
        <field name="domain">[('user_ids', 'in', [uid])]</field>
        <field name="context">{
            'search_default_my_tasks': 1,
            'mobile_view': True
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks assigned to you yet!
            </p>
            <p>
                Your assigned tasks will appear here organized by status.
                Tap on tasks to view details or update their status.
            </p>
        </field>
    </record>

    <!-- Override Mobile Task Manager Action to use Kanban -->
    <record id="action_mobile_task_manager" model="ir.actions.act_window">
        <field name="name">My Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="view_project_task_mobile_kanban"/>
        <field name="domain">[('user_ids', 'in', [uid])]</field>
        <field name="context">{
            'search_default_my_tasks': 1,
            'mobile_view': True
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks assigned to you yet!
            </p>
            <p>
                Your assigned tasks will appear here for easy mobile access.
                Swipe or tap to change task status.
            </p>
        </field>
    </record>

    <!-- Update menu to use enhanced action -->
    <record id="menu_mobile_tasks" model="ir.ui.menu">
        <field name="action" ref="action_mobile_task_manager"/>
    </record>
</odoo>