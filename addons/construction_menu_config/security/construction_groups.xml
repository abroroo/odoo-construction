<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Construction User Groups -->
    <record id="group_construction_site_manager" model="res.groups">
        <field name="name">Construction Site Manager</field>
        <field name="category_id" ref="module_category_construction"/>
        <field name="comment">Site managers working in the field with mobile interface</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_construction_project_manager" model="res.groups">
        <field name="name">Construction Project Manager</field>
        <field name="category_id" ref="module_category_construction"/>
        <field name="comment">Project managers handling budgets and task planning</field>
        <field name="implied_ids" eval="[(4, ref('group_construction_site_manager')), (4, ref('project.group_project_manager'))]"/>
    </record>

    <record id="group_construction_admin" model="res.groups">
        <field name="name">Construction Administrator</field>
        <field name="category_id" ref="module_category_construction"/>
        <field name="comment">Full system administration for construction business</field>
        <field name="implied_ids" eval="[(4, ref('group_construction_project_manager')), (4, ref('base.group_system'))]"/>
    </record>

</odoo>