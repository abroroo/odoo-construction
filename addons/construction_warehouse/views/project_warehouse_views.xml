<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Warehouse Form View -->
    <record id="view_project_warehouse_form" model="ir.ui.view">
        <field name="name">project.warehouse.form</field>
        <field name="model">construction.project.warehouse</field>
        <field name="arch" type="xml">
            <form string="Project Warehouse">
                <header>
                    <button name="action_receive_material" string="Receive Material" type="object" class="btn-primary"/>
                    <button name="action_consume_material" string="Consume Material" type="object" class="btn-secondary"/>
                    <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Warehouse name..."/>
                        </h1>
                        <h3>
                            <field name="project_id" required="1" options="{'no_create': True}" placeholder="Select the construction project..."/>
                        </h3>
                    </div>

                    <group>
                        <group string="Warehouse Information">
                            <field name="warehouse_type" required="1"/>
                            <field name="warehouse_manager_id"/>
                            <field name="storage_capacity"/>
                            <field name="current_utilization" widget="percentage"/>
                        </group>
                        <group string="Statistics">
                            <field name="stock_count" readonly="1"/>
                            <field name="total_stock_value" readonly="1"/>
                        </group>
                    </group>

                    <group string="Location">
                        <field name="address" nolabel="1" placeholder="Physical address of warehouse..."/>
                    </group>

                    <notebook>
                        <page string="Current Stock">
                            <field name="stock_ids" readonly="1">
                                <tree string="Materials in Stock">
                                    <field name="material_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_of_measure"/>
                                    <field name="available_quantity"/>
                                    <field name="stock_status" widget="badge" decoration-success="stock_status == 'ok'" decoration-warning="stock_status == 'low'" decoration-danger="stock_status == 'out'"/>
                                    <field name="storage_location"/>
                                    <field name="total_value"/>
                                    <button name="action_consume_material" type="object" icon="fa-minus" title="Consume Material"/>
                                    <button name="action_receive_material" type="object" icon="fa-plus" title="Receive Material"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Recent Activity">
                            <group>
                                <group string="Today's Receipts">
                                    <field name="recent_receipts" nolabel="1" readonly="1">
                                        <tree string="Receipts">
                                            <field name="material_id"/>
                                            <field name="quantity"/>
                                            <field name="supplier_id"/>
                                            <field name="receipt_status"/>
                                        </tree>
                                    </field>
                                </group>
                                <group string="Today's Consumptions">
                                    <field name="recent_consumptions" nolabel="1" readonly="1">
                                        <tree string="Consumptions">
                                            <field name="material_id"/>
                                            <field name="quantity"/>
                                            <field name="consumed_by_id"/>
                                            <field name="consumption_status"/>
                                        </tree>
                                    </field>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Project Warehouse Tree View -->
    <record id="view_project_warehouse_tree" model="ir.ui.view">
        <field name="name">project.warehouse.tree</field>
        <field name="model">construction.project.warehouse</field>
        <field name="arch" type="xml">
            <tree string="Project Warehouses">
                <field name="name"/>
                <field name="project_id"/>
                <field name="warehouse_type"/>
                <field name="warehouse_manager_id"/>
                <field name="stock_count"/>
                <field name="total_stock_value"/>
                <field name="current_utilization" widget="percentage"/>
                <field name="active" widget="boolean_toggle"/>
                <button name="action_view_stock" type="object" icon="fa-cubes" title="View Stock"/>
                <button name="action_receive_material" type="object" icon="fa-plus" title="Receive Material"/>
                <button name="action_consume_material" type="object" icon="fa-minus" title="Consume Material"/>
            </tree>
        </field>
    </record>

    <!-- Project Warehouse Kanban View -->
    <record id="view_project_warehouse_kanban" model="ir.ui.view">
        <field name="name">project.warehouse.kanban</field>
        <field name="model">construction.project.warehouse</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="warehouse_type"/>
                <field name="stock_count"/>
                <field name="total_stock_value"/>
                <field name="current_utilization"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb8">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <t t-esc="record.name.value"/>
                                    </strong>
                                    <br/>
                                    <small class="text-muted">
                                        <t t-esc="record.project_id.value"/>
                                    </small>
                                    <br/>
                                    <span class="badge badge-secondary">
                                        <t t-esc="record.warehouse_type.value"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row mb4">
                                    <div class="col-6">
                                        <strong>Materials:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <t t-esc="record.stock_count.value"/> types
                                    </div>
                                </div>
                                <div class="row mb4">
                                    <div class="col-6">
                                        <strong>Stock Value:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        $<t t-esc="record.total_stock_value.value"/>
                                    </div>
                                </div>
                                <div class="row mb4">
                                    <div class="col-6">
                                        <strong>Utilization:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <t t-esc="record.current_utilization.value"/>%
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt8">
                                <div class="oe_kanban_bottom_left">
                                    <button name="action_view_stock" type="object" class="btn btn-sm btn-secondary">
                                        <i class="fa fa-cubes"/> Stock
                                    </button>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <button name="action_receive_material" type="object" class="btn btn-sm btn-success">
                                        <i class="fa fa-plus"/> Receive
                                    </button>
                                    <button name="action_consume_material" type="object" class="btn btn-sm btn-primary">
                                        <i class="fa fa-minus"/> Consume
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_project_warehouse_search" model="ir.ui.view">
        <field name="name">project.warehouse.search</field>
        <field name="model">construction.project.warehouse</field>
        <field name="arch" type="xml">
            <search string="Search Warehouses">
                <field name="name" string="Warehouse" filter_domain="[('name', 'ilike', self)]"/>
                <field name="project_id" string="Project"/>
                <field name="warehouse_manager_id" string="Manager"/>

                <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>

                <separator/>
                <filter string="On-Site" name="filter_onsite" domain="[('warehouse_type', '=', 'on_site')]"/>
                <filter string="Off-Site" name="filter_offsite" domain="[('warehouse_type', '=', 'off_site')]"/>

                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'warehouse_type'}"/>
                    <filter string="Manager" name="group_manager" context="{'group_by': 'warehouse_manager_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_project_warehouses" model="ir.actions.act_window">
        <field name="name">Project Warehouses</field>
        <field name="res_model">construction.project.warehouse</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first project warehouse!
            </p>
            <p>
                Set up physical storage locations for your construction projects.
                Track materials from supplier delivery to site consumption.
            </p>
        </field>
    </record>
</odoo>