<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supplier Portal - Phase 1 Minimal Delivery Form -->
    <record id="view_supplier_delivery_form" model="ir.ui.view">
        <field name="name">supplier.delivery.form</field>
        <field name="model">construction.material.receipt</field>
        <field name="arch" type="xml">
            <form string="Deliver Material">
                <sheet>
                    <div class="oe_title">
                        <h2>Deliver Material to Project</h2>
                    </div>

                    <group>
                        <group string="Project &amp; Material">
                            <field name="warehouse_id" required="1" options="{'no_create': True}"/>
                            <field name="project_id" readonly="1"/>
                            <field name="material_id" required="1" options="{'no_create': True}"/>
                        </group>
                        <group string="Delivery Details">
                            <field name="delivery_reference" placeholder="Delivery note #"/>
                            <field name="quantity" required="1"/>
                            <field name="unit_cost" required="1" string="Price per Unit"/>
                        </group>
                    </group>

                    <!-- HIDDEN FIELDS - Auto-filled or not needed in Phase 1 -->
                    <field name="unit_of_measure" invisible="1"/>
                    <field name="total_cost" invisible="1"/>
                    <field name="supplier_id" invisible="1"/>
                    <field name="supplier_contact" invisible="1"/>
                    <field name="delivery_truck" invisible="1"/>
                    <field name="receipt_date" invisible="1"/>
                    <field name="receipt_status" invisible="1"/>
                    <field name="quality_check" invisible="1"/>
                    <field name="condition_notes" invisible="1"/>
                    <field name="damaged_quantity" invisible="1"/>
                    <field name="storage_location" invisible="1"/>
                    <field name="storage_notes" invisible="1"/>
                    <field name="receipt_notes" invisible="1"/>
                    <field name="received_by_id" invisible="1"/>
                </sheet>
                <footer>
                    <button name="action_mark_received" string="Confirm Delivery" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Supplier Portal Dashboard -->
    <record id="view_supplier_portal_dashboard" model="ir.ui.view">
        <field name="name">supplier.portal.dashboard</field>
        <field name="model">construction.material.receipt</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false" edit="false">
                <field name="id"/>
                <field name="warehouse_id"/>
                <field name="project_id"/>
                <field name="material_id"/>
                <field name="quantity"/>
                <field name="receipt_date"/>
                <field name="receipt_status"/>
                <field name="total_cost"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb8">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <t t-esc="record.material_id.value"/>
                                    </strong>
                                    <br/>
                                    <small class="text-muted">
                                        <t t-esc="record.project_id.value"/>
                                    </small>
                                    <br/>
                                    <small class="text-muted">
                                        Warehouse: <t t-esc="record.warehouse_id.value"/>
                                    </small>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <span class="badge" t-att-class="record.receipt_status.raw_value === 'accepted' ? 'badge-success' : record.receipt_status.raw_value === 'received' ? 'badge-info' : record.receipt_status.raw_value === 'rejected' ? 'badge-danger' : 'badge-secondary'">
                                        <t t-esc="record.receipt_status.value"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row mb4">
                                    <div class="col-6">
                                        <strong>Quantity:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <t t-esc="record.quantity.value"/>
                                    </div>
                                </div>
                                <div class="row mb4">
                                    <div class="col-6">
                                        <strong>Total Value:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        $<t t-esc="record.total_cost.value"/>
                                    </div>
                                </div>
                                <div class="text-muted">
                                    <i class="fa fa-calendar"/> <t t-esc="record.receipt_date.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Supplier Actions -->
    <record id="action_supplier_delivery" model="ir.actions.act_window">
        <field name="name">Deliver Materials</field>
        <field name="res_model">construction.material.receipt</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_supplier_delivery_form"/>
        <field name="target">new</field>
        <field name="context">{'default_supplier_id': uid}</field>
    </record>

    <record id="action_supplier_portal_dashboard" model="ir.actions.act_window">
        <field name="name">My Deliveries</field>
        <field name="res_model">construction.material.receipt</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_supplier_portal_dashboard"/>
        <field name="domain">[('supplier_id', '=', user.partner_id.id)]</field>
        <field name="context">{'search_default_recent': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No deliveries recorded yet!
            </p>
            <p>
                Use the "Deliver Materials" button to log your deliveries to project warehouses.
            </p>
        </field>
    </record>

    <!-- Simplified Material List for Suppliers -->
    <record id="view_material_supplier_tree" model="ir.ui.view">
        <field name="name">material.supplier.tree</field>
        <field name="model">construction.material</field>
        <field name="arch" type="xml">
            <tree string="Available Materials" create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="category"/>
                <field name="unit_of_measure"/>
                <field name="description"/>
                <button name="action_quick_receive" type="object" icon="fa-truck" title="Deliver This Material"/>
            </tree>
        </field>
    </record>

    <record id="action_supplier_materials" model="ir.actions.act_window">
        <field name="name">Available Materials</field>
        <field name="res_model">construction.material</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_material_supplier_tree"/>
        <field name="domain">[('active', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Material catalog
            </p>
            <p>
                Browse available materials that can be delivered to project warehouses.
            </p>
        </field>
    </record>
</odoo>