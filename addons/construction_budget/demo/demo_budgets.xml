<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Demo Budget for Residential Building A -->
        <record id="demo_budget_residential" model="construction.project.budget">
            <field name="name">Residential Building A - Budget</field>
            <field name="project_id" ref="project.project_project_1"/>
            <field name="state">active</field>
            <field name="start_date" eval="(DateTime.now() - timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="end_date" eval="(DateTime.now() + timedelta(days=240)).strftime('%Y-%m-%d')"/>
            <field name="alert_threshold">85.0</field>
        </record>

        <!-- Demo Budget Lines for Residential Project -->
        <record id="demo_budget_line_1" model="construction.project.budget.line">
