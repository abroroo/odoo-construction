<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- Budget Analysis Report -->
    <record id="view_budget_analysis_graph" model="ir.ui.view">
        <field name="name">budget.analysis.graph</field>
        <field name="model">construction.project.budget.line</field>
        <field name="arch" type="xml">
            <graph string="Budget vs Actual" type="bar">
                <field name="category_id" type="row"/>
                <field name="budget_amount" type="measure"/>
                <field name="spent_amount" type="measure"/>
                <field name="remaining_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_budget_analysis_pivot" model="ir.ui.view">
        <field name="name">budget.analysis.pivot</field>
        <field name="model">construction.project.budget.line</field>
        <field name="arch" type="xml">
            <pivot string="Budget Analysis">
                <field name="project_id" type="row"/>
                <field name="category_id" type="col"/>
                <field name="budget_amount" type="measure"/>
                <field name="spent_amount" type="measure"/>
                <field name="remaining_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_budget_analysis" model="ir.actions.act_window">
        <field name="name">Budget Analysis</field>
        <field name="res_model">construction.project.budget.line</field>
        <field name="view_mode">graph,pivot</field>
        <field name="context">{}</field>
    </record>

</odoo>