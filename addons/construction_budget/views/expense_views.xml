<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Expense Form View to Add Budget Fields -->
    <record id="view_hr_expense_form_budget" model="ir.ui.view">
        <field name="name">hr.expense.form.budget</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[last()]" position="after">
                <group string="Budget Information" name="budget_info">
                    <field name="construction_project_id"/>
                    <field name="budget_category_id"/>
                    <field name="project_budget_line_id"
                           domain="[('project_id', '=', construction_project_id), ('category_id', '=', budget_category_id)]"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Inherit Expense Tree View to Add Budget Columns -->
    <record id="view_hr_expense_tree_budget" model="ir.ui.view">
        <field name="name">hr.expense.tree.budget</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.view_expenses_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_distribution']" position="after">
                <field name="construction_project_id" optional="show"/>
                <field name="budget_category_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Expense Sheet Form View -->
    <record id="view_hr_expense_sheet_form_budget" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.budget</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='employee_details']" position="after">
                <group string="Budget Impact" name="budget_impact">
                    <field name="construction_project_id"/>
                    <field name="total_budget_impact" widget="monetary"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>